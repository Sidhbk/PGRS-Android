<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dept_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Department"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/date_id_result"
            android:layout_below="@id/dept_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/details_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_below="@id/date_id_result"
            android:padding="3dp"
            android:text="Details"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/type_id_result"
            android:layout_below="@id/details_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Type"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/status_id_result"
            android:layout_below="@id/type_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Status"
            android:textColor="#000"
            android:textSize="20sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Upvote"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:id="@+id/upvote_button_id"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>