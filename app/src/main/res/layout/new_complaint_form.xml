<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginVertical="16dp"
        android:id="@+id/spinner_item"
        android:gravity="center"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/dialog_details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:hint="Details"
        android:padding="16dp"
        android:shadowColor="#979ca3" />

    <EditText
        android:id="@+id/dialog_date_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:hint="Date"
        android:padding="16dp"
        android:shadowColor="#979ca3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginVertical="16dp"
        android:id="@+id/spinner_item_type"
        android:gravity="center"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_height="wrap_content"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <Button
            android:id="@+id/get_loc_id"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_gravity="center"
            android:text="Get Location" />
        <Button
            android:id="@+id/capture_photo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_gravity="center"
            android:text="Take photo" />
    </LinearLayout>
    <Button
        android:id="@+id/dialog_submit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="14dp"
        android:padding="16dp"
        android:text="Submit Complaint" />
</LinearLayout>